<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:orientation="vertical"
    android:background="#f5f5f5">

    // 搜索框
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal"
        android:background="#099fde"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/common_index_search_bg">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/imageView_locate"
                android:src="@drawable/locate"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海"
                android:layout_marginLeft="5dp"
                android:id="@+id/textView11" />

            <EditText
                android:id="@+id/search"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="50dp"
                android:background="#FFF">
            </EditText>
        </LinearLayout>
    </LinearLayout>

    // 高级搜索
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#dcf6ff">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/imageView"
            android:src="@drawable/adv_search"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高级搜索"
            android:id="@+id/textView"
            android:layout_marginLeft="10dp"
            android:textColor="#333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="目的地,出发时间,预算天数"
            android:id="@+id/textView10"
            android:layout_marginLeft="10dp"
            android:textColor="#666"
            android:textSize="14dp" />

    </LinearLayout>

    // 广告ViewPager
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/adbanner"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="">
        </EditText>
    </LinearLayout>

    //10宫格
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_column="1"
        android:background="#FFF">
        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gridview_entry"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:numColumns="auto_fit"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:columnWidth="60dp"
            android:stretchMode="columnWidth"
            android:gravity="top"
            />
    </GridLayout>

    // 广告2
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/adbanner_big"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="">
        </EditText>
    </LinearLayout>

    //8宫格产品

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_column="1">
        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gridview_product"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:numColumns="auto_fit"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:columnWidth="90dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="0" />


    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgTest"
        android:layout_row="0"
        android:layout_column="0" />

</LinearLayout>
